@page
@model RazorIntro.Pages.Forms.AddCourseModel
@{
    ViewData["Title"] = "Add Course";
}

<h1>Add Course</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="Course.CourseCode" class="control-label"></label>
        <input asp-for="Course.CourseCode" class="form-control" autofocus />
    </div>

    <div class="form-group">
        <label asp-for="Course.CourseName" class="control-label"></label>
        <input asp-for="Course.CourseName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Course.Hours" class="control-label"></label>
        <input asp-for="Course.Hours" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>